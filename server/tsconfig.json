{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "target": "es5",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "baseUrl": "./"
  },
  "include": ["./src/**/*"],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": ["**/node_modules", "./build"]
  }
}
